<script type="text/template" class="journey-form-template">

  <form class="journey-form" action="/results" method="POST">

    <div class="form-group">
      <label for="from">From</label>
      <input type="text" name="from" class="form-control" id="from"  aria-describedby="help-from">
      <div id="help-from" class="help-block">
        A block of help text that breaks onto a new line and may extend beyond one line.
      </div>
    </div>
    <div class="form-group">
      <label for="to">To</label>
      <input type="text" name="to" class="form-control" id="to" aria-describedby="help-to">
      <div id="help-to" class="help-block">
        A block of help text that breaks onto a new line and may extend beyond one line.
      </div>
    </div>

    <fieldset aria-describedby="help-days" class="week-days">
      <legend>
        Weekdays
      </legend>
      <button id="toggle-weekdays" class="btn btn-info pull-right">Check all weekdays</button>
      <label class="checkbox-inline">
        <input type="checkbox" id="mon" name="days" value="mon" > Mon
      </label>
      <label class="checkbox-inline">
        <input type="checkbox" id="tue" name="days" value="tue"> Tue
      </label>
      <label class="checkbox-inline">
        <input type="checkbox" id="wed" name="days" value="wed"> Wed
      </label>
      <label class="checkbox-inline">
        <input type="checkbox" id="thu" name="days" value="thu"> Thu
      </label>
      <label class="checkbox-inline">
        <input type="checkbox" id="fri" name="days" value="fri"> Fri
      </label>
    </fieldset>

    <fieldset aria-describedby="help-days" class="weekends">
      <legend>
        Weekend days
      </legend>
      <div class="element-align right">
        <label class="checkbox-inline">
          <input type="checkbox" id="sat" name="days" value="sat"> Sat
        </label>
        <label class="checkbox-inline">
          <input type="checkbox" id="sun" name="days" value="sun"> Sun
        </label>
      </div>
    </fieldset>
    <div id="help-days" class="help-block">
      A block of help text that breaks onto a new line and may extend beyond one line.
    </div>

    <div class="form-group" aria-describedby="help-onwards">
      <label for="onwards">Onwards departure</label>
      <select name="onwards" class="form-control" id="onwards">
        <option>00:00</option>
        <option>00:15</option>
        <option>00:30</option>
        <option>00:45</option>
        <option>01:00</option>
      </select>
      <div id="help-onwards" class="help-block">
        A block of help text that breaks onto a new line and may extend beyond one line.
      </div>
    </div>

    <div class="form-group" aria-describedby="help-return">
      <label for="return">Return departure</label>
      <select name="return" class="form-control" id="return">
        <option>00:00</option>
        <option>00:15</option>
        <option>00:30</option>
        <option>00:45</option>
        <option>01:00</option>
      </select>
      <div id="help-return" class="help-block">
        A block of help text that breaks onto a new line and may extend beyond one line.
      </div>
    </div>

    <div class="form-group" aria-describedby="help-discount">
      <label for="discount">Discount</label>
      <select name="discount" class="form-control" id="discount">
        <option>discount 1</option>
        <option>discount 2</option>
        <option>discount 3</option>
        <option>discount 4</option>
        <option>discount 5</option>
      </select>
      <div id="help-discount" class="help-block">
        A block of help text that breaks onto a new line and may extend beyond one line.
      </div>
    </div>

    <input id="#submit" type="submit" value="Calculate" class="btn btn-success">

  </form>

  <div id="results"></div>

</script>
